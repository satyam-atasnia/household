<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".l_s">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".c_s"
        tools:layout_editor_absoluteX="238dp"
        tools:layout_editor_absoluteY="341dp">

        <EditText
            android:id="@+id/l_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="97dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/l_phone"
            android:layout_width="251dp"
            android:layout_height="46dp"
            android:layout_marginStart="63dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="97dp"
            android:ems="10"
            android:hint="Phone no."
            android:inputType="phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/l_name" />

        <EditText
            android:id="@+id/l_pin"
            android:layout_width="243dp"
            android:layout_height="49dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="104dp"
            android:ems="10"
            android:hint="Area Pincode"
            android:inputType="textPostalAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/l_phone" />

        <EditText
            android:id="@+id/l_email"
            android:layout_width="250dp"
            android:layout_height="44dp"
            android:layout_marginStart="68dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="93dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/l_typ" />

        <EditText
            android:id="@+id/l_pass"
            android:layout_width="246dp"
            android:layout_height="45dp"
            android:layout_marginStart="68dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="97dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/l_email" />

        <CheckBox
            android:id="@+id/l_tc"
            android:layout_width="248dp"
            android:layout_height="88dp"
            android:layout_marginStart="67dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="96dp"
            android:text="By signing up you agree to aur terms and conditions."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/l_pass" />

        <Button
            android:id="@+id/l_sb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="152dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="171dp"
            android:layout_marginBottom="38dp"
            android:text="sign-up"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/l_tc" />

        <Spinner
            android:id="@+id/l_typ"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="67dp"
            android:entries="@array/type_arrays"
            android:prompt="@string/type_prompt"
            android:spinnerMode="dropdown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/l_pin" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>